# Конфигурация для нового AI процессора психологических статей

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Unsplash API (опционально, для изображений)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Настройки обработки
MAX_ARTICLES_PER_DAY=3
MIN_WORD_COUNT=12000
MAX_WORD_COUNT=18000

# Настройки моделей
ANALYSIS_MODEL=gpt-3.5-turbo
WRITING_MODEL=gpt-4

# Настройки парсинга
PARSING_DELAY=1
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=psychology_processor.log

# Настройки файлов
USED_LINKS_FILE=used_links.json
ARTICLES_OUTPUT_DIR=./output

# Настройки прокси (если нужно)
# HTTP_PROXY=http://proxy:port
# HTTPS_PROXY=https://proxy:port