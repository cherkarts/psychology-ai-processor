# ================================
# Оптимизация производительности
# ================================

# Включение сжатия GZIP
<IfModule mod_deflate.c>
    # Сжатие текстовых файлов
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Исключаем старые браузеры
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# Кэширование статических файлов
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Изображения (1 месяц)
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Видео и аудио (1 месяц)
    ExpiresByType video/mp4 "access plus 1 month"
    ExpiresByType audio/mpeg "access plus 1 month"
    
    # CSS и JavaScript (1 неделя)
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType application/x-javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    
    # Шрифты (1 год)
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # HTML и PHP (10 минут для динамических страниц)
    ExpiresByType text/html "access plus 600 seconds"
    
    # По умолчанию
    ExpiresDefault "access plus 1 month"
</IfModule>

# Дополнительные заголовки кэширования
<IfModule mod_headers.c>
    # Кэширование статических файлов
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|css|js|woff|woff2|ttf|otf)$">
        Header set Cache-Control "public, max-age=2592000, immutable"
    </FilesMatch>
    
    # Предзагрузка критических ресурсов
    <FilesMatch "\.css$">
        Header set Link "<%{REQUEST_URI}s>; rel=preload; as=style" env=REDIRECT_STATUS
    </FilesMatch>
    
    # Безопасность
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Отключение ETags (используем кэширование вместо них)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# ================================
# URL Rewriting
# ================================

RewriteEngine On

# Убираем расширение .php ТОЛЬКО для корневых файлов (без слэшей)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([A-Za-z0-9_-]+)$ $1.php [NC,L]

# Красивые URL для страниц специализаций
RewriteRule ^rabota-s-zavisimostyami/?$ dependencies.php [NC,L]
RewriteRule ^sozavisimost/?$ codependency.php [NC,L]
RewriteRule ^trevozhnost-i-strahi/?$ anxiety.php [NC,L]
RewriteRule ^slozhnosti-v-otnosheniyah/?$ relationships.php [NC,L]

# Красивые URL для основных страниц
RewriteRule ^uslugi/?$ services.php [NC,L]
RewriteRule ^o-nas/?$ about.php [NC,L]
RewriteRule ^otzyvy/?$ reviews.php [NC,L]
RewriteRule ^ceny/?$ prices.php [NC,L]
RewriteRule ^meditatsii/?$ meditations.php [NC,L]
RewriteRule ^magazin/?$ shop.php [NC,L]
RewriteRule ^kontakty/?$ contact.php [NC,L]

# Красивые URL для статей (используем article.php для отдельных статей)
RewriteRule ^statya/([A-Za-z0-9-]+)/?$ article.php?slug=$1 [NC,L,QSA]

# Красивые URL для товаров (используем существующий product.php)
RewriteRule ^tovar/([A-Za-z0-9-]+)/?$ product.php?slug=$1 [NC,L,QSA]

# Красивые URL для категорий магазина
RewriteRule ^kategoriya/([A-Za-z0-9-]+)/?$ shop.php?category=$1 [NC,L,QSA]

# Убираем trailing slash
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]
